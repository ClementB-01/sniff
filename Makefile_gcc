OBJS = ./main/sniff_filter_bpf.o \
       ./main/sniff.o \
       ./main/sniff_filter.o \
       ./main/sniff_eth.o \
       ./main/sniff_pcap.o \
	./proto/proto_misc.o \
	./proto/proto_tcpip.o \
	./proto/proto_arp.o \
	./proto/proto_tcp.o \
	./proto/proto_udp.o \
	./proto/proto_quic.o \
	./proto/proto_showtime.o \
	./proto/sniff_parser.o
	

CC = gcc
CFLAGS = -Wall -O2 -g -Iinc/
TARGET=./sniff

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

$(TARGET):$(OBJS)
	$(CC) $(OBJS) -o $(TARGET)

clean:
	rm -f $(OBJS) $(TARGET)
