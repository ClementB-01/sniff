OBJS = ./main/sniff_filter_bpf.o \
       ./main/sniff.o \
       ./main/sniff_filter.o \
       ./main/sniff_eth.o \
       ./main/sniff_pcap.o \
       ./proto/sniff_tcp.o \
       ./proto/sniff_parser.o 

CC = gcc
CFLAGS = -Wall -O -g -Iinc/
TARGET=./sniff

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

$(TARGET):$(OBJS)
	$(CC) $(OBJS) -o $(TARGET)

clean:
	rm -f $(OBJS) $(TARGET)
